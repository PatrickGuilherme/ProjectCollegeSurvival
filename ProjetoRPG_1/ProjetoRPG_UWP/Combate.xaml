    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="1280" Height="720"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Canvas Width="1280" Height="720" x:Name="PaginaCombate">
        <Image x:Name="ImgPlayer" Height="200" Width="200"  Source="/Assets/stick.png" Canvas.Left="132" Canvas.Top="166"/>
        <Image x:Name="ImgMonstro" Height="300" Width="300" Source="/Assets/Aculo.png" Canvas.Left="840" Canvas.Top="116"/>
        <Button Content="Ataque" Height="70" Width="140"   Canvas.Left="69" Canvas.Top="598" x:Name ="Ataque"/>
        <ComboBox Canvas.Left="69" Canvas.Top="526" Width="193" x:Name="ListaI" SelectionChanged="ComboBox_SelectionChanged" />
        <Button Content="Lançar Habilidade"  Height="32" Width="135"  Canvas.Left="267" Canvas.Top="468"  x:Name = "Lancar_Habilidade"/>
        <Button Content="Usar item"  x:Name="Inventario" Height="32" Width="135" Canvas.Left="267" Canvas.Top="527"/>
        <TextBlock  Text="TextBlock"  x:Name="Vida" FontSize="25" Canvas.Left="281" Canvas.Top="56"  />
        <TextBlock  Text="TextBlock"  x:Name="Energia" FontSize="25"  Canvas.Left="69" Canvas.Top="56"/>
        <TextBlock  Text="TextBlock"  FontSize="25" Canvas.Left="840" Canvas.Top="56" x:Name="EnergiaM"/>
        <TextBlock  Text="TextBlock"  FontSize="25"  Canvas.Top="56" Canvas.Left="1037" x:Name="VidaM"/>
        <TextBlock TextWrapping="Wrap" Text="..." x:Name="Descricao"  Height="200" Width="135" FontSize="12"  Canvas.Top="467" Canvas.Left="439"/>
        <Button Content="Defesa" Canvas.Left="262" Canvas.Top="598" Height="70" Width="140" x:Name="Defesa" />
        <ComboBox Canvas.Left="69" Canvas.Top="468" Width="193" x:Name="ListaH"/>
    </Canvas>


</Page>
