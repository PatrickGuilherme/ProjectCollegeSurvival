    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="800" Height=" 800"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" d:DesignWidth="800" d:DesignHeight="800">

    <Canvas Width="800" Height="800">

        <Button x:Name="BtnStart" 
                Content="START GAME" 
                Height="49" Width="203" 
                Canvas.Left="298" 
                Canvas.Top="400" 
                Background="White"
                BorderBrush="Black"/>
        <Button x:Name="BtnInfo" 
                Content="Informações" 
                Height="49" Width="203" 
                Canvas.Left="298" 
                Canvas.Top="500" 
                Background="White"
                BorderBrush="Black"/>
    </Canvas>
</Page>
