<Page Height="696" Width="1366"
    x:Class="ProjetoRPG_UWP.Instrucoes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjetoRPG_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Canvas Height="696" Width="1366" Background="Black">
        <TextBlock x:Name="Titulo" Canvas.Left="527" Foreground="White" Canvas.Top="57" Text="Instruções" TextWrapping="Wrap" FontSize="50" FontStyle="Oblique" TextAlignment="center" FontWeight="Bold"/>

        <TextBlock FontSize="25" Canvas.Left="312" Foreground="White" FontWeight="Bold" Canvas.Top="258" Text="Movimentação" TextWrapping="Wrap" Height="46" TextAlignment="center"/>
        <Image Height="150" Canvas.Left="284" Canvas.Top="319" Source="/Assets/Instrucoes/TeclasMovimentacao.png"/>

        <TextBlock x:Name="TxtTeclaZ" FontSize="20" Canvas.Left="902" Foreground="White" Canvas.Top="265" Text="Tecla Z" TextWrapping="Wrap" Height="57" Width="328"/>
        <Image Height="63" Width="81" Canvas.Left="809" Canvas.Top="260" Source="/Assets/Instrucoes/TeclaZ.png"/>

        <TextBlock x:Name="TxtTeclaC" FontSize="20" Canvas.Left="902" Canvas.Top="349" Text="Tecla C" Foreground="White" TextWrapping="Wrap" Height="57" Width="318"/>
        <Image Height="63" Width="81" Canvas.Left="811" Canvas.Top="349" Source="/Assets/Instrucoes/TeclaC.png"/>

        <TextBlock x:Name="TxtTeclaI" FontSize="20" Canvas.Left="902" Canvas.Top="446" Text="Tecla I" Foreground="White" TextWrapping="Wrap" Height="53" Width="319"/>
        <Image Height="63" Width="81" Canvas.Left="811" Canvas.Top="436" Source="/Assets/Instrucoes/TeclaI.png"/>
        <Button Background="DarkRed" Foreground="White" Content="Voltar" Canvas.Left="592" Canvas.Top="599" x:Name="BtnVoltar" Height="60" Width="111">
            <Button.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.ThemeDictionaries>
                        <ResourceDictionary x:Key="Dark">
                            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="DarkRed"/>
                            <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Red"/>
                        </ResourceDictionary>
                        <ResourceDictionary x:Key="Light">
                            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="DarkRed"/>
                            <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="Red"/>
                        </ResourceDictionary>
                    </ResourceDictionary.ThemeDictionaries>
                </ResourceDictionary>
            </Button.Resources>
        </Button>
    </Canvas>
</Page>
